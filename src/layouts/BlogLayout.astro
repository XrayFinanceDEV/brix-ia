---
import MainLayout from "@layouts/MainLayout.astro";
const { title, description, link, ogImage } = Astro.props;
---

<MainLayout 
  title={title} 
  description={description} 
  canonical={`https://brix-ia.com${Astro.url.pathname}`}
  ogImage={ogImage}
>
  <div class="container mx-auto px-4 w-9/10 md:w-3/4">
    <a 
      href={link} 
      class="text-[var(--color-accent-dark)] hover:text-green-600 mb-4 inline-block mt-24 md:mt-[100px]"
    >
      &larr; Torna al blog
    </a>
    <article class="prose prose-lg max-w-none">
      <slot />
    </article>
  </div>
</MainLayout>


<style is:global>
  /* Additional custom styles for markdown content */
  .prose h1 {
    @apply text-3xl font-bold mb-4;
  }
  .prose h2 {
    @apply text-2xl font-semibold mb-3;
  }
  .prose p {
    @apply mb-4;
  }
  .prose ul, .prose ol {
    @apply ml-6 mb-4;
  }
  .prose li {
    @apply mb-2;
  }
  .prose a {
    @apply text-blue-600 hover:text-blue-800;
  }
  .prose blockquote {
    @apply border-l-4 border-gray-400 pl-6 pr-6 italic bg-gray-100 py-4 my-6 rounded-r-lg;
  }
  .prose code {
    @apply bg-gray-100 rounded px-2 py-1 text-sm font-mono;
  }
  .prose pre {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto my-4;
  }
  .prose pre code {
    @apply bg-transparent text-gray-100 p-0;
  }

  /* Stili per le tabelle */
  .prose table {
    @apply w-full text-left border-collapse mb-4;
  }
  .prose th {
  @apply bg-gray-200 font-semibold text-gray-900;
  }
  .prose td {
    @apply border border-gray-300 px-4 py-2;
  }
  .prose th {
    @apply bg-gray-200 font-semibold;
  }

  /* Stili aggiuntivi per elementi markdown */
  .prose strong {
    @apply font-bold;
  }
  .prose em {
    @apply italic;
  }
  .prose hr {
    @apply border-gray-300 my-6;
  }

  /* Fix per elementi inline code dentro paragrafi */
  .prose p code,
  .prose li code {
    @apply bg-gray-100 text-red-600 px-1 py-0.5 rounded text-sm font-mono;
  }

  /* Stili per liste annidate */
  .prose ul ul, .prose ol ol, .prose ul ol, .prose ol ul {
    @apply mt-2 mb-2;
  }

  /* Assicurati che tutte le blockquote abbiano sfondo grigio */
  .prose blockquote,
  blockquote {
    @apply bg-gray-100 border-l-4 border-gray-400 !important;
  }
</style>
