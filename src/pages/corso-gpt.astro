    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Sezione 1: Presentazione del corso (sinistra) -->
      <div class="flex flex-col justify-center">
        <h1 class="text-5xl font-bold mb-4" style="color: #80FDBE">{courseDetails.title}</h1>
        <h2 class="text-2xl font-semibold text-gray-300 mb-6">{courseDetails.subtitle}</h2>
        <p class="text-lg text-gray-400 max-w-lg mb-8">{courseDetails.description}</p>
        
        {courseDetails.perks.map(perk => (
          <p class="text-md text-gray-500 max-w-lg mb-4">{perk}</p>
        ))}
        
        <p class="text-lg font-medium text-gray-300 mt-6">Alcuni degli strumenti che imparerai ad utilizzare:</p>
        <ul class="text-gray-400 mt-4">
