        <span class="inline-block text-white text-sm font-bold px-3 py-1 rounded-full mb-4">{offerDetails.label}</span>
        <p class="text-4xl font-bold text-white mb-2">{offerDetails.price}</p>
        <p class="text-xl text-gray-500 line-through">{offerDetails.originalPrice}</p>
        <p class="text-2xl font-semibold mb-6" style="color: #80FDBE">{offerDetails.discount} SCONTO</p>
        
        <ul class="text-left text-gray-400 mb-8">
          {offerDetails.benefits.map(benefit => (
            <li class="flex items-center mb-2">
              <svg class="w-5 h-5 mr-2" style="color: #80FDBE" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
