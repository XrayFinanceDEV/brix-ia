  {
    image: "https://api.brix-ia.com/uploads/Fabio_Brix_IA_0fdd19f273.jpeg",
    name: "Fabio P",
    role: "Brix-IA"
  },
  {
    image: "https://api.brix-ia.com/uploads/Peter_Brix_IA_7300ebf7dc.jpeg",
    name: "Peter K",
    role: "Brix-IA"
  },
  {
    image: "https://api.brix-ia.com/uploads/Leoluca_Brix_IA_1327da8a1f.jpeg",
    name: "Leoluca C",
    role: "Brix-IA"
  },
  {
    image: "https://api.brix-ia.com/uploads/Tiberio_Brix_IA_068eb43295.jpeg",
    name: "Tiberio",
    role: "Brix-IA"
  }
];

const teamMembersBottom = [
{
    image: "https://api.brix-ia.com/uploads/Paolo_Brix_IA_3b478e4200.jpeg",
    name: "Paolo",
    role: "Brix-IA"
  },
  {
    image: "https://api.brix-ia.com/uploads/Luca_P_Brix_IA_85004d853f.jpeg",
    name: "Luca",
    role: "Brix-IA"
  },
  {
    image: "https://api.brix-ia.com/uploads/Alessio_Brix_IA_3aab6b4d1a.jpeg",
    name: "Alessio",
    role: "Brix-IA"
  },
  {
    image: "https://api.brix-ia.com/uploads/Stefano_Brix_IA_6aa2afa7dd.png",
    name: "Stefano",
    role: "Brix-IA"
  }
