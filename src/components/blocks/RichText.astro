---
import { marked } from "marked";

interface RichTextProps {
  __component: "shared.rich-text";
  id: number;
  body: string;
}

const { body } = Astro.props as RichTextProps;

// Configura marked per una migliore gestione del markdown
marked.setOptions({
  breaks: true,
  gfm: true,
});

const parsedContent = marked.parse(body);
---

<div class="max-w-5xl mx-auto my-12 prose prose-lg prose-gray max-w-none">
  <article set:html={parsedContent} />
</div>
